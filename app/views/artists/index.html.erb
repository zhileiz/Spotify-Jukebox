<div>
  <p id="notice"><%= notice %></p>

  <h1>Listing Artists</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @artists.each do |artist| %>
        <tr>
          <td><%= artist.name %></td>
          <td><%= link_to 'Show', artist, id: "show#{artist.id}"%></td>
          <td><%= link_to 'Destroy', artist, id: "destroy#{artist.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <footer>
  <%= link_to 'New Artist', new_artist_path %>
  <%= link_to 'Show Songs', songs_path %>
  </footer>
</div>
